{
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "friendsofphp/php-cs-fixer": "^3.17"
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix",
        "test": "php -d xdebug.remote_enable=Off -d xdebug.remote_autostart=Off vendor/bin/phpunit",
        "debug:test": "php -d xdebug.remote_enable=1 -d xdebug.remote_port=9003 vendor/bin/phpunit"
    }
}
